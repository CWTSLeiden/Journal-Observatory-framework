@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfg: <http://www.w3.org/2004/03/trix/rdfg-1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix cc: <http://creativecommons.org/ns#> .
@prefix doaj: <https://doaj.org/> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix fabio: <http://purl.org/spar/fabio/> .
@prefix ppo: <http://purl.org/cwts/ppo/> .
@prefix pro: <http://purl.org/spar/pro/> .
@prefix loc: <http://id.loc.gov/ontologies/bibframe/> .
@prefix openalex: <https://openalex.org/> .
@prefix prism: <http://prismstandard.org/namespaces/basic/2.0/> .
@prefix romeo: <https://v2.sherpa.ac.uk/id/> .
@prefix schema: <https://schema.org/> .
@prefix wd: <http://www.wikidata.org/entity/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ppo:PADShape a sh:NodeShape ;
    sh:targetClass ppo:PAD ;
    sh:nodeKind sh:IRI ;
    sh:not [
        sh:class ppo:Provenance ;
        sh:class ppo:DocInfo
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasAssertion ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1 
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasProvenance ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1 
    ] .

ppo:AssertionShape a sh:NodeShape ;
    sh:targetClass ppo:Assertion ;
    sh:nodeKind sh:IRI ;
    sh:targetObjectsOf ppo:hasAssertion ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:creator ;
        sh:class dcterms:Agent ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:created ;
        sh:datatype xsd:dateTime ;
        sh:nodeKind sh:Literal ;
        sh:minCount 1
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:license ;
        sh:datatype xsd:IRI ;
        sh:nodeKind sh:Literal ;
        sh:minCount 1
    ] .

ppo:PlatformShape a sh:NodeShape ;
    sh:targetClass ppo:Platform ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:identifier ;
        sh:nodeKind sh:IRIOrLiteral ;
        sh:minCount 1
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:relation ;
        sh:class dcterms:Agent ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path schema:url ;
        sh:datatype xsd:anyURI ;
        sh:nodeKind sh:IRIOrLiteral ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path schema:name ;
        sh:datatype xsd:String ;
        sh:nodeKind sh:Literal ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasPolicy ;
        sh:class ppo:Policy ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] .

ppo:PublicationPolicyShape a sh:NodeShape ;
    sh:targetClass ppo:PublicationPolicy ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:disseminatesVersion ;
        sh:class ppo:articleVersion ;
        sh:nodeKind ppo:IRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasPaywall ;
        sh:datatype xsd:boolean ;
        sh:nodeKind ppo:Literal ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:license ;
        sh:datatype xsd:anyURI ;
        sh:nodeKind ppo:IRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasEmbargo ;
        sh:datatype xsd:duration ;
        sh:nodeKind ppo:Literal ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasCopyrightOwner ;
        sh:class pro:PublishingRole ;
        sh:nodeKind ppo:BlankNodeOrIRI ;
    ] ;
    .

ppo:ArticleVersionShape a sh:NodeShape ;
    sh:nodeKind sh:IRI ;
    sh:targetClass ppo:ArticleVersion .

ppo:ArticlePublishingChargesShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass ppo:ArticlePublishingCharges ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:apc ;
        sh:datatype xsd:integer ;
        sh:nodeKind ppo:Literal ;
        sh:minInclusive 0 ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path schema:priceCurrency ;
        sh:datatype xsd:string ;
        sh:nodeKind ppo:Literal ;
        sh:pattern "[a-z]{2}" ;
        sh:flags "i" ;  # ignore case
    ] .


ppo:PublicationElsewherePolicyShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass ppo:PublicationElsewherePolicy ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:publicationLocation ;
        sh:class ppo:PlatformType ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:appliesToVersion ;
        sh:class ppo:articleVersion ;
        sh:nodeKind sh:IRI ;
    ] .

ppo:PublicationElsewherePolicyProhibitedShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass ppo:PublicationElsewherePolicyProhibited ;
    sh:not [
        sh:class ppo:PublicationElsewherePolicyMandatory ;
        sh:class ppo:PublicationElsewherePolicyAllowed ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:
    ] .

ppo:PublicationElsewherePolicyMandatoryShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass ppo:PublicationElsewherePolicyMandatory ;
    sh:not [
        sh:class ppo:PublicationElsewherePolicyProhibited ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:license ;
        sh:datatype xsd:anyURI ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasCopyrightOwner ;
        sh:class pro:PublishingRole ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] .

ppo:PublicationElsewherePolicyAllowedShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass ppo:PublicationElsewherePolicyAllowed ;
    sh:not [
        sh:class ppo:PublicationElsewherePolicyProhibited ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasEmbargo ;
        sh:datatype xsd:duration ;
        sh:nodeKind sh:Literal ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:publicationCondition ;
        sh:datatype xsd:string ;
        sh:nodeKind sh:Literal ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path dcterms:license ;
        sh:datatype xsd:anyURI ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasCopyrightOwner ;
        sh:class pro:PublishingRole ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] ;
    .

ppo:EvaluationPolicyShape a sh:NodeShape ;
    sh:targetClass ppo:EvaluationPolicy ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:postPublicationCommenting ;
        sh:class xsd:string ;
        sh:pattern "open|on invitation" ;
        sh:flags "i" ;
        sh:nodeKind sh:Literal ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:possibleDecision ;
        sh:class xsd:string ;
        sh:pattern "accepted|rejected" ;  # TODO
        sh:flags "" ;
        sh:nodeKind sh:Literal ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:involves ;
        sh:class pro:PublishingRole ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:hasInitiator ;
        sh:class pro:PublishingRole ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:maxCount 1 ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:covers ;
        sh:class pro:DocumentType ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] .


ppo:PublishingRoleShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass pro:PublishingRole ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:anonymousTo ;
        sh:class ppo:PublishingRole ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:interactsWith ;
        sh:class ppo:PublishingRole ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:identityPubliclyAccessible ;
        sh:class ppo:PublicAccessibility ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] .

ppo:DocumentTypeShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass ppo:DocumentType ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:documentPubliclyAccessible ;
        sh:class ppo:PublicAccessibility ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] .

ppo:OptInShape a sh:NodeShape ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:targetClass ppo:OptIn ;
    sh:property [ a sh:PropertyShape ;
        sh:path ppo:optInBy ;
        sh:class pro:PublishingRole ;
        sh:nodeKind sh:BlankNodeOrIRI ;
    ] .
